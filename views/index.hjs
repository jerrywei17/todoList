<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript">
    function testAjax(){
        var a = document.getElementById("testAjax");
            a.addEventListener('click',function(){
            alert('testAjax');
        });
    }
    
    </script>
  </head>
  <body onload="testAjax()">
    <h1>{{ title }}</h1>
    <form name="addlist" action="/addlist" method="post">
      <input type="text" name="content" />
      <input type="submit" value="add list">
    </form>
		<ul>
		{{#todos}}
		    <li>{{content}}
		    	<span><a href="/delete/{{_id}}" title="Delete this todo item"> Delete</a></span>
		    </li>
	    {{/todos}}
	    </ul>

      <input id="testAjax" type="button" value="ajax">
  </body>
</html>